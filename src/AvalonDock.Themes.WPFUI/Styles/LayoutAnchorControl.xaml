<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:avalonDockControls="clr-namespace:AvalonDock.Controls;assembly=AvalonDock"
                    xmlns:avalonDock="clr-namespace:AvalonDock;assembly=AvalonDock">

    <ControlTemplate x:Key="AnchorTemplate"
                     TargetType="{x:Type avalonDockControls:LayoutAnchorControl}">
        <Grid x:Name="Main"
              Background="Transparent"
              Margin="0,0,16,0"
              SnapsToDevicePixels="True"
              UseLayoutRounding="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Border x:Name="Top"
                    Grid.Row="0"
                    Height="4"
                    CornerRadius="2"
                    Background="{DynamicResource ControlStrokeColorDefaultBrush}"
                    Visibility="Collapsed" />

            <ContentPresenter Grid.Row="1"
                              Margin="0,4,0,4"
                              Content="{Binding Model, RelativeSource={RelativeSource TemplatedParent}}"
                              ContentTemplate="{Binding AnchorableHeaderTemplate, Mode=OneWay, RelativeSource={RelativeSource AncestorType={x:Type avalonDock:DockingManager}, Mode=FindAncestor}}"
                              ContentTemplateSelector="{Binding AnchorableHeaderTemplateSelector, Mode=OneWay, RelativeSource={RelativeSource AncestorType={x:Type avalonDock:DockingManager}, Mode=FindAncestor}}" />

            <Border x:Name="Bottom"
                    Grid.Row="2"
                    Height="4"
                    CornerRadius="2"
                    Background="{DynamicResource ControlStrokeColorDefaultBrush}"
                    Visibility="Collapsed" />
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="Side"
                     Value="Left">
                <Setter TargetName="Bottom"
                        Property="Visibility"
                        Value="Visible" />
            </Trigger>

            <Trigger Property="Side"
                     Value="Top">
                <Setter TargetName="Top"
                        Property="Visibility"
                        Value="Visible" />
            </Trigger>

            <Trigger Property="Side"
                     Value="Right">
                <Setter TargetName="Top"
                        Property="Visibility"
                        Value="Visible" />
            </Trigger>

            <Trigger Property="Side"
                     Value="Bottom">
                <Setter TargetName="Bottom"
                        Property="Visibility"
                        Value="Visible" />
            </Trigger>

            <Trigger Property="IsMouseOver"
                     Value="true">
                <Setter TargetName="Top"
                        Property="Background"
                        Value="{DynamicResource AccentFillColorSecondaryBrush}" />
                <Setter TargetName="Bottom"
                        Property="Background"
                        Value="{DynamicResource AccentFillColorSecondaryBrush}" />
                <Setter TargetName="Main"
                        Property="TextElement.Foreground"
                        Value="{DynamicResource AccentFillColorSecondaryBrush}" />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

</ResourceDictionary>